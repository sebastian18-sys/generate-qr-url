---
import Layout from '../layouts/Layout.astro';
// import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main class="min-h-screen grid place-content-center">
		<div class="bg-white rounded-2xl w-80 p-4 flex flex-col gap-4">
			<picture class="bg-blue-500 pb-2">
				<img class="rounded-xl overflow-hidden" src="" alt="qr" />
			</picture>
			
			<h1 class="font-bold text-xl text-center px-4">Ingresa una URL</h1>
			<form>
				<input type="url" class="border-2 px-4 py-2 rounded-md w-full" placeholder="https://..." />
			</form>
			<p class="text-sm text-center text-gray-500 px-6">Para generar/crear Codigo QR!</p>
		</div>
	</main>
</Layout>

